<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
       "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
<tiles-definitions>

    <!-- 공통 템플릿 -->
    <definition name="app.template" template="/WEB-INF/layout/template.jsp">
        <put-attribute name="title" value="" />
        <put-attribute name="header" value="" />
        <put-attribute name="body" value="" />
        <put-attribute name="footer" value="" />
    </definition>

    <!-- 메인, 상품리스트, 상품상세페이지, 커뮤니티(목록,상세,글쓰기,수정), 공지사항(목록,상세) -->
    <!-- http://localhost:8080/Anabada/product/main.tiles 
         http://localhost:8080/Anabada/product/product_list.tiles 
         http://localhost:8080/Anabada/product/product.tiles 
         ...    
         메인 : main.jsp
         상품리스트 : product_list.jsp
         상품상세 : product.jsp
         상품수정 : product_modify.jsp
         커뮤니티 목록 : commu_list.jsp
                상세 : commu.jsp
                글쓰기 : commu_register.jsp
                수정 : commu_modify.jsp
         공지사항 목록 : notice_list.jsp
                상세 : notice.jsp
    -->
    <definition name="main" extends="app.template"> <!-- main으로 시작하는 페이지들이 레이아웃을 상속받음 -->
        <put-attribute name="title" value="Anabada" />
        <put-attribute name="header" value="/WEB-INF/layout/header.jsp" />
        <put-attribute name="body" value="/WEB-INF/layout/body.jsp" /> <!-- body영역안보이게 하려면 value값 비워두기 -->
        <put-attribute name="footer" value="/WEB-INF/layout/footer.jsp" /> 
    </definition>
    <definition name="WILDCARD:product/*" extends="main">	<!-- product로 시작하는 뷰만 body부분 덮어씌워짐 -->
	  <put-attribute name="body" value="/WEB-INF/jsp/{1}.jsp"/>	 <!-- product뒤에 시작하는 body영역에 jsp가 존재해야함
	  																 존재하지않으면 기존 레이아웃에 body영역이나옴 -->
	</definition>    
    
    
    <!-- 회원(회원가입/로그인) 페이지, 결제 페이지 -->
    <!-- http://localhost:8080/Anabada/member/join.tiles  
         http://localhost:8080/Anabada/member/login.tiles 
         http://localhost:8080/Anabada/member/pay.tiles 
         회원가입 : join.jsp 
         로그인 : login.jsp    
         결제 : pay.jsp
    -->
    <definition name="member" extends="app.template">
        <put-attribute name="title" value="Anabada - member" />
        <put-attribute name="header" value="/WEB-INF/layout/mem_header.jsp" />
        <put-attribute name="body" value="/WEB-INF/layout/body.jsp" />
        <put-attribute name="footer" value="/WEB-INF/layout/footer.jsp" /> 
    </definition>
    <definition name="WILDCARD:member/*" extends="member">	<!-- member로 시작하는 뷰만 body부분 덮어씌워짐 -->
	  <put-attribute name="body" value="/WEB-INF/jsp/{1}.jsp"/>
	</definition>    

    <!-- 마이페이지 
    	 http://localhost:8080/Anabada/mypage/wish_list.tiles
    	 http://localhost:8080/Anabada/mypage/sales_list.tiles  
    	 http://localhost:8080/Anabada/mypage/pur_list.tiles 
    	 .... 
    	 찜하기 : wish_list.jsp
    	 판매 내역 : sale_list.jsp
    	 구입 내역 : pur_list.jsp
    	 내정보수정 : profile_edit.jsp    	 
    -->
    <definition name="mypage" extends="app.template">
        <put-attribute name="title" value="Anabada - My page" />
        <put-attribute name="header" value="/WEB-INF/layout/header.jsp" />
        <put-attribute name="body" value="/WEB-INF/layout/body.jsp" />
    </definition>
    <definition name="WILDCARD:mypage/*" extends="mypage">	<!-- mypage로 시작하는 뷰만 body부분 덮어씌워짐 -->
	  <put-attribute name="body" value="/WEB-INF/jsp/{1}.jsp"/>
	</definition>

    <definition name="mylist" extends="app.template">
        <put-attribute name="body" value="/WEB-INF/layout/body.jsp" />
    </definition>
    <definition name="WILDCARD:mylist/*" extends="mylist">	<!-- mylist로 시작하는 뷰만 body부분 덮어씌워짐 -->
        <put-attribute name="body" value="/WEB-INF/jsp/{1}.jsp"/>
    </definition>


</tiles-definitions>
