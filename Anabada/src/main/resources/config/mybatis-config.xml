<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>

  <settings>
    <setting name="mapUnderscoreToCamelCase" value="true"/>
    <setting name="jdbcTypeForNull" value="NULL" />
  </settings>

  <typeAliases>
    <typeAlias alias="member" type="com.yedam.vo.MemberVO"/>
    <typeAlias alias="product" type="com.yedam.vo.ProductVO"/>
    <typeAlias alias="review" type="com.yedam.vo.ReviewVO"/>
    <typeAlias alias="qna" type="com.yedam.vo.QnaVO"/>
    <typeAlias alias="qnaReply" type="com.yedam.vo.QnaReplyVO"/>    
  </typeAliases>

  <environments default="development">
    <environment id="development">
      <transactionManager type="JDBC"/>
      <dataSource type="POOLED">
        <property name="driver" value="oracle.jdbc.driver.OracleDriver"/>
        <property name="url" value="jdbc:oracle:thin:@localhost:1521:xe"/>
        <property name="username" value="team"/>
        <property name="password" value="team"/>
      </dataSource>
    </environment>
  </environments>

  <mappers>
    <package name="com.yedam.mapper"/>
  </mappers>

</configuration>