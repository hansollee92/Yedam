<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yedam.mapper.QnaReplyMapper">


	<!-- 문의게시판 댓글 목록 -->
	<select id="selectQnaReplyList" parameterType="int" resultType="qnaReply">
		select q.qnaReply_no,
	           q.qnaReply_content,
	           q.qnaReply_date,
	           q.qna_no,
	           m.member_id,
	           m.member_no,
	           m.member_img
	    from   qna_Reply q join member m
	                 on m.member_no = q.member_no
	    where qna_no = #{qnaNo}
	    order by qnaReply_no
	</select>
	
	<!-- 댓글 단건 검색 -->
	<select id="selectQnaReply" resultType="qnaReply">
		select *
		from qna_reply
		where qnaReply_no = #{qnaReplyNo}
	</select>
	
	<!-- 댓글 삭제 -->
	<delete id="deleteQnaReply" parameterType="int">
		delete from qna_reply
		where qnaReply_no = #{qnaReplyNo}
	</delete>
	





</mapper>